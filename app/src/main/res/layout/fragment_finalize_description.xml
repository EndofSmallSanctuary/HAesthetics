<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:maxHeight="300dp"
        android:weightSum="1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="@dimen/padding_mini"
        android:orientation="vertical"
        android:background="@drawable/offer_selected"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <com.makeramen.roundedimageview.RoundedImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/finalize_description_pic"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            app:riv_corner_radius="8dp"
            android:layout_weight="0"
            >
    </com.makeramen.roundedimageview.RoundedImageView>

    <LinearLayout
            android:layout_weight="0"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/finalize_description_header"
                style="@style/FinalizeDescSubHeaderStyle"
                android:layout_gravity="center_horizontal"
        >

        </TextView>

        <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/main"/>

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
                android:id="@+id/finalize_description_text"
                android:text="@string/longteststring"
                style="@style/FinalizeDescStyle"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
            >

        </TextView>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>




</LinearLayout>