<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".HeatherBasedApplications.Part_Legendary.LegendaryDetailsFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:visibility="visible"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/legend_details_backbutton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/back_button_reverse_style" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="center"
            android:textColor="@color/dark"
            android:text="@string/aesthetic_details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/legend_details_img"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                        app:riv_corner_radius="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/legend_details_img"
                app:layout_constraintTop_toTopOf="@id/legend_details_img"
                app:layout_constraintBottom_toBottomOf="@id/legend_details_img"
                >
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.45"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="14sp"
                    android:text="@string/name"/>
            <TextView
                    android:text="Emilia"
                    android:id="@+id/legend_details_name"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:textColor="@color/main"
                    android:fontFamily="@font/gilroy_bold"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15sp" />
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.455"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="14sp"
                    android:text="@string/info"/>
            <TextView
                    android:text="Wow Lol Omg Wtf "
                    android:id="@+id/legend_details_info"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/gilroy_bold"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="15sp"
                    />
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.45"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="15sp"
                    android:text="@string/height"/>
            <TextView
                    android:text="175cm"
                    android:id="@+id/legend_details_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/gilroy_bold"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="15sp"
                    />
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.45"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="14sp"
                    android:text="@string/weight"/>
            <TextView
                    android:text="56kg"
                    android:id="@+id/legend_details_weight"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/gilroy_bold"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="15sp"
                    />
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.45"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="14sp"
                    android:text="@string/acitvity"/>
            <TextView
                    android:id="@+id/legend_details_title"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/gilroy_bold"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:background="@drawable/offer_selected"
                    android:padding="5dp"
                    />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:fontFamily="@font/gilroy_bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/dark"
            android:text="@string/physique_model"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:animateLayoutChanges="true"
            android:layout_width="400dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="350dp">


        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/physique_model_template"
                tools:layout_editor_absoluteX="-16dp"
                tools:layout_editor_absoluteY="-16dp"></ImageView>

        <ImageView
                android:visibility="gone"
                android:id="@+id/legend_details_physiquemodel_chest"
                android:layout_width="95dp"
                android:layout_height="34dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="61dp"
                android:scaleType="fitXY"
                android:src="@drawable/physique_model_chest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

        <ImageView
                android:visibility="gone"
                android:id="@+id/legend_details_physiquemodel_neck"
                android:layout_width="55dp"
                android:layout_height="24dp"
                android:layout_marginStart="73dp"
                android:layout_marginTop="41dp"
                android:scaleType="fitXY"
                android:src="@drawable/physique_model_neck"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

        <ImageView
                android:visibility="gone"
                android:id="@+id/legend_details_physiquemodel_leftarm"
                android:layout_width="40dp"
                android:layout_height="79dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="84dp"
                android:rotation="0"
                android:scaleType="fitXY"
                android:src="@drawable/physique_model_left_arm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

        <ImageView
                android:visibility="gone"
                android:id="@+id/legend_details_physiquemodel_rightarm"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="40dp"
                android:layout_height="79dp"
                android:layout_marginEnd="230dp"
                android:layout_marginTop="84dp"
                android:rotation="0"
                android:scaleType="fitXY"
                android:src="@drawable/physique_model_right_arm"
                app:layout_constraintTop_toTopOf="parent"></ImageView>


        <ImageView
                android:visibility="gone"
                android:id="@+id/legend_details_physiquemodel_leftarmback"
                android:layout_width="34dp"
                android:layout_height="83dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="143dp"
                android:rotation="0"
                android:scaleType="fitXY"
                android:src="@drawable/physique_model_left_armback"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

        <ImageView
                android:visibility="gone"
                android:id="@+id/legend_details_physiquemodel_rightarmback"
                android:layout_width="34dp"
                android:layout_height="83dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="40dp"
                android:rotation="0"
                android:scaleType="fitXY"
                android:src="@drawable/physique_model_right_armback"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

        <ImageView
                android:visibility="gone"
                android:id="@+id/legend_details_physiquemodel_back"
                android:layout_width="99dp"
                android:layout_height="126dp"
                android:layout_marginTop="29dp"
                android:layout_marginRight="59dp"
                android:scaleType="fitXY"
                android:src="@drawable/physique_model_back"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:visibility="gone"
                android:id="@+id/legend_details_physiquemodel_abs"
                android:layout_width="59dp"
                android:layout_height="78dp"
                android:layout_marginTop="89dp"
                android:layout_marginLeft="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/physique_model_abs"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:visibility="gone"
                android:id="@+id/legend_details_physiquemodel_legleft"
                android:layout_width="30dp"
                android:layout_height="180dp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/physique_model_legleft"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
                android:visibility="gone"
                android:id="@+id/legend_details_physiquemodel_rightleft"
                android:layout_width="30dp"
                android:layout_height="180dp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="68dp"
                android:scaleType="fitXY"
                android:src="@drawable/physique_model_rightleg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
                android:visibility="gone"
                android:id="@+id/legend_details_physiquemodel_leftlegback"
                android:layout_width="30dp"
                android:layout_height="213dp"
                android:layout_marginBottom="13dp"
                android:layout_marginEnd="110dp"
                android:scaleType="fitXY"
                android:src="@drawable/physique_model_leftlegback"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
                android:visibility="gone"
                android:id="@+id/legend_details_physiquemodel_rightlegback"
                android:layout_width="30dp"
                android:layout_height="213dp"
                android:layout_marginBottom="13dp"
                android:layout_marginEnd="76dp"
                android:scaleType="fitXY"
                android:src="@drawable/physique_model_rightlegback"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
</androidx.core.widget.NestedScrollView>