<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/heather_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/home_bottom_navigation"
            app:layout_constraintTop_toTopOf="parent" />

    <me.ibrahimsn.lib.SmoothBottomBar
            android:id="@+id/home_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
        app:iconSize="20dp"
            app:backgroundColor="@color/white"
        app:iconTint="@color/dark"
        app:iconTintActive="@color/main"
        app:indicatorColor="@android:color/transparent"
        app:indicatorRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/heather_navigation"
            app:textSize="15sp"
            app:textColor="@color/main"/>




