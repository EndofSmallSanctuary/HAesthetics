<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
            android:id="@+id/note_row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="May 28,2020"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="16sp"
            android:textColor="@color/main"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"/>
    <TextView
            android:id="@+id/note_row_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:fontFamily="@font/gilroy_regular"
            android:textSize="14sp"
            android:text="Wonder Woman Persistance"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/note_row_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/note_row_divider"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="â€¢"
            android:includeFontPadding="false"
            android:textColor="@color/gray"
            android:gravity="center"
            android:fontFamily="@font/gilroy_regular"
            app:layout_constraintTop_toBottomOf="@id/note_row_name"
            app:layout_constraintStart_toStartOf="@id/note_row_name"
            app:layout_constraintBottom_toTopOf="@id/note_row_split"
            app:layout_constraintEnd_toEndOf="@id/note_row_name"/>
    <TextView
            android:id="@+id/note_row_split"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:text="Upper-Lower"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="@id/note_row_name"
            app:layout_constraintEnd_toEndOf="@id/note_row_name"
            app:layout_constraintTop_toBottomOf="@id/note_row_divider"
            app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>