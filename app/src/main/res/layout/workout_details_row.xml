<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/workout_details_row_img"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/testsrc"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
            android:id="@+id/workout_details_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="17sp"
            android:text="Test Exercise Name"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="@dimen/margin_medium"
            app:layout_constraintTop_toTopOf="@id/workout_details_row_img"
            app:layout_constraintBottom_toBottomOf="@id/workout_details_row_img"
            app:layout_constraintLeft_toRightOf="@id/workout_details_row_img"/>
    <TextView
            android:id="@+id/workout_details_row_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="15sp"
            android:text="3 sets x 10-12 reps"
            app:layout_constraintStart_toStartOf="@id/workout_details_row_name"
            app:layout_constraintTop_toBottomOf="@id/workout_details_row_name"/>


</androidx.constraintlayout.widget.ConstraintLayout>