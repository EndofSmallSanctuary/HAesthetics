<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.hollywoodaethetics">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
            android:name="com.orm.SugarApp"
            android:allowBackup="true"
            android:hardwareAccelerated="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:usesCleartextTraffic="true">
        <activity android:name=".WorkoutNotes.WorkoutNotesActivity"
                android:screenOrientation="portrait"
                android:theme="@style/PlainTheme"></activity>
        <activity
                android:name=".WorkoutNotes.WorkoutNoteEditActivity"
                android:screenOrientation="portrait"
                android:theme="@style/PlainTheme"></activity>
        <activity
                android:name=".HeatherBasedApplications.exInterpretationModule.WorkoutDetails.WorkoutDetailsActivity"
                android:screenOrientation="portrait"
                android:theme="@style/PlainTheme" />
        <activity
                android:name=".HeatherBasedApplications.exInterpretationModule.YoutubeDetails.YoutubeDetailsActivity"
                android:configChanges="orientation|screenSize"
                android:theme="@style/PlainTheme" />
        <activity
                android:name=".HeatherBasedApplications.ExerciseDetails.ExerciseDetailsActivity"
                android:screenOrientation="portrait"
                android:theme="@style/PlainTheme" />
        <activity
                android:name=".HeatherBasedApplications.ProfileActivity"
                android:screenOrientation="portrait"
                android:theme="@style/PlainTheme" />
        <activity
                android:name=".HeatherBasedApplications.Leaderboards.LeaderboardsActivity"
                android:screenOrientation="portrait"
                android:theme="@style/PlainTheme" />
        <activity
                android:name=".SignInScreen.SignInActivity"
                android:screenOrientation="portrait"
                android:theme="@style/SurveyTheme" />
        <activity
                android:name=".HeatherBasedApplications.Part_Legendary.LegendaryeditActivity"
                android:screenOrientation="portrait"
                android:theme="@style/PlainTheme" />

        <meta-data
                android:name="DATABASE"
                android:value="hollywood_locals.db" />
        <meta-data
                android:name="VERSION"
                android:value="6" />
        <meta-data
                android:name="QUERY_LOG"
                android:value="true" />
        <meta-data
                android:name="DOMAIN_PACKAGE_NAME"
                android:value="com.example.hollywoodaethetics" />

        <activity
                android:name=".HeatherBasedApplications.Part_Profile.ProfileEditActivity"
                android:hardwareAccelerated="true"
                android:screenOrientation="portrait"
                android:theme="@style/PlainTheme" />
        <activity
                android:name=".SplashScreen.SplashScreenActivity"
                android:screenOrientation="portrait"
                android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".HeatherBasedApplications.HeatherBasedActivity"
                android:screenOrientation="portrait"
                android:theme="@style/PlainTheme"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".Survey.SurveyActivity"
                android:screenOrientation="portrait"
                android:theme="@style/SurveyTheme" />
        <activity
                android:name=".LogInScreen.LogInActivity"
                android:screenOrientation="portrait"
                android:theme="@style/SurveyTheme" />
    </application>

</manifest>